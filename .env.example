# Required
BOT_TOKEN=123456:ABCDEF_your_telegram_bot_token
JWT_SECRET=change_me_to_a_long_random_string
APP_URL=https://your-railway-domain.up.railway.app

# Optional
# Security: validate initData lifetime (seconds). Default: 86400 (24h)
MAX_AUTH_AGE_SECONDS=86400

# Telegram webhook hardening (recommended)
TELEGRAM_WEBHOOK_SECRET_TOKEN=change_me_too

# Allow /api/auth/dev for local browser testing (set false in prod)
ALLOW_DEV_AUTH=true

# Set to true to enable periodic alert checks & digests (enabled by default)
ENABLE_JOBS=true
